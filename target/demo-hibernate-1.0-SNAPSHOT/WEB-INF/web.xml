<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- CONTROLLERS -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.Controllers.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.Controllers.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OffreDetailsServlet</servlet-name>
        <servlet-class>com.Controllers.OffreDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OffreDetailsServlet</servlet-name>
        <url-pattern>/offre-details</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.Controllers.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.Controllers.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ForgotPassServlet</servlet-name>
        <servlet-class>com.Controllers.ForgotPassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForgotPassServlet</servlet-name>
        <url-pattern>/forgot-password</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EntrepriseServlet</servlet-name>
        <servlet-class>com.Controllers.EntrepriseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EntrepriseServlet</servlet-name>
        <url-pattern>/liste-entreprises</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CandidatsServlet</servlet-name>
        <servlet-class>com.Controllers.CandidatsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CandidatsServlet</servlet-name>
        <url-pattern>/liste-candidats</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AboutUsServlet</servlet-name>
        <servlet-class>com.Controllers.AboutUsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AboutUsServlet</servlet-name>
        <url-pattern>/about-us</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.Controllers.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AjouterOffreServlet</servlet-name>
        <servlet-class>com.Controllers.AjouterOffreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AjouterOffreServlet</servlet-name>
        <url-pattern>/ajouter-offre</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BrowseOffresServlet</servlet-name>
        <servlet-class>com.Controllers.BrowseOffresServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BrowseOffresServlet</servlet-name>
        <url-pattern>/voir-offres</url-pattern>
    </servlet-mapping>

    <!-- FILTERS -->
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>com.Filters.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/register</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>NotUserFilter</filter-name>
        <filter-class>com.Filters.NotUserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>NotUserFilter</filter-name>
        <url-pattern>/dashboard</url-pattern>
        <url-pattern>/ajouter-offre</url-pattern>
    </filter-mapping>

    <!-- ERRORS -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/Errors/error-404.jsp</location>
    </error-page>
</web-app>